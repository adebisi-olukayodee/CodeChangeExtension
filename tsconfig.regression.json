{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "src/regression-runner.ts",
    "src/analyzers/**/*.ts",
    "src/utils/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

